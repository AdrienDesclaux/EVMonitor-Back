{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "jest": true,
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
      "indent": ["error", 2],
      "semi": ["error", "always"],
      "no-multi-spaces": "error",
      "no-trailing-spaces": "error",
      "eol-last": "error",
      "no-multiple-empty-lines": "off",
      "linebreak-style": ["error", "windows"]
    }
    
}
